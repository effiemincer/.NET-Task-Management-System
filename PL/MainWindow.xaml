<Window x:Class="PL.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button Content="Admin Page" HorizontalAlignment="Left" VerticalAlignment="Center" Height="39" Width="91" Click="Admin_Button_Click" Margin="224,0,0,0"/>
        <Label Content="Enter engineer ID below:" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="220,-150,0,0"/>
        <TextBox x:Name="engineerID" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="466,-100,0,0" Width="91" Height="20"/>
        <Button Content="Engineer Page" HorizontalAlignment="Left" Margin="466,0,0,0" VerticalAlignment="Center" Height="39" Width="91" Click="Engineer_Button_Click"/>
        <Button Content="Reset All Data" HorizontalAlignment="Left" Margin="224,200,0,0" VerticalAlignment="Center" Height="39" Width="91" Click="Reset_Data_Button_Click"/>
        <Button x:Name="initializeDataButton"  Content="Initialize Data" HorizontalAlignment="Left" Margin="466,200,0,0" VerticalAlignment="Center" Height="39" Width="91" Click="Initialize_Data_Button_Click"/>

    </Grid>
</Window>
